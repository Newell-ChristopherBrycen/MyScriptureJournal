@page "{id:int?}"
@model MyScriptureJournal.Pages.Scriptures.DeleteEntryModel
@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/background.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital@1&display=swap" rel="stylesheet">
</head>
<h1>Delete</h1>
<body>
    <h3>Are you sure you want to delete this entry?</h3>
    <div>
        <h4>Scripture</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.EntryDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.EntryDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.Book)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.Book)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.Chapter)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.Chapter)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.Verse)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.Verse)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.JournalEntry)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.JournalEntry)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Scripture.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index">Back to Journal Entry List</a>
        </form>
    </div>
</body>
